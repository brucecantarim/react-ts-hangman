{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["dom", "esnext"],
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "jsx": "react",
    "plugins": []
  },
  "exclude": ["node_modules", "dist"]
}
